{
  "name": "Obsidian",
  "required_api_version": "^2.0.0",
  "description": "Manage your Obsidian Vault",
  "developer_name": "Mike Barkmin",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "obsidian_vaults",
      "type": "input",
      "name": "Vault Paths",
      "description": "Paths to your vaults (absolute / , separated)",
      "default_value": ""
    },
    {
      "id": "obsidian_search_note_vault",
      "type": "keyword",
      "name": "Search Note",
      "description": "Search the name your notes",
      "default_value": "on"
    },
    {
      "id": "obsidian_search_string_vault",
      "type": "keyword",
      "name": "Search String",
      "description": "Search the content of your notes",
      "default_value": "of"
    },
    {
      "id": "obsidian_open_daily",
      "type": "keyword",
      "name": "Open Daily",
      "description": "Open the daily note",
      "default_value": "od"
    },
    {
      "id": "obsidian_quick_capture",
      "type": "keyword",
      "name": "Quick Capture",
      "description": "Append text to your quick capture note",
      "default_value": "oc"
    },
    {
      "id": "obsidian_quick_capture_note",
      "type": "input",
      "name": "Quick Capture Note",
      "description": "The note used for quick capture. If empty the daily note will be used.",
      "default_value": ""
    },
    {
      "id": "number_of_notes",
      "type": "input",
      "name": "Limit the number notes to select",
      "default_value": 8
    }
  ]
}
